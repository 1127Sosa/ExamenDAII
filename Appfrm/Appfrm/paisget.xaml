<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appfrm.paisget">
    <Grid>
        <Image Source="metodos.jpg" Aspect="AspectFill" />

        <Grid>

            <StackLayout Padding="15,0">
                <Entry x:Name="nombre_pais"
               Placeholder="Nombre de Pais"
               FontSize="Medium" Keyboard="Text" />
                <Entry x:Name="codigo_de_area"
               Placeholder="Codigo de Area"
               FontSize="Medium" Keyboard="Text" />
                <Grid>
                    <Button Text="Enviar" Clicked="Button_Clicked" CornerRadius="20" TextColor="#FF4081" BackgroundColor="White" FontAttributes="Bold"/>
                </Grid>
                <Label Text="" x:Name="resultado"
                       FontSize="Large"
                       VerticalOptions="Center" 
                       HorizontalOptions="Center"></Label>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>