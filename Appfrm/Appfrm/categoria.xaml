<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appfrm.categoria">
    <Grid>
        <Image Source="fondo.jpg" Aspect="AspectFill" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="logo2.png" HeightRequest="170" WidthRequest="170"/>

            <StackLayout Grid.Row="1" Padding="30,0">
                <Label Text="App Api" FontSize="Large"
                                              VerticalOptions="Center" 
                                              HorizontalOptions="Center"/>
                <Button x:Name="getcategoria" Text="POST" Clicked="getcategoria_Clicked" CornerRadius="20" TextColor="White" BackgroundColor="#041C32" FontAttributes="Bold"/>
                <Button x:Name="deletecat" Text="DELETE" Clicked="deletecat_Clicked" CornerRadius="20" TextColor="White" BackgroundColor="#04293A" FontAttributes="Bold"/>
                <Button x:Name="GetCate" Text="GET" Clicked="GetCate_Clicked" CornerRadius="20" TextColor="White" BackgroundColor="#064663" FontAttributes="Bold"/>
                <Button x:Name="putcategoria" Text="PUT" Clicked="putcategoria_Clicked" CornerRadius="20" TextColor="White" BackgroundColor="#1D5C63" FontAttributes="Bold"/>
               
                
            </StackLayout>
        </Grid>
    </Grid>
    
</ContentPage>